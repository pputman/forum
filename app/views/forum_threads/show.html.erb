<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @forum_thread.user_id %>
</p>

<p>
  <b>Title:</b>
  <%= @forum_thread.title %>
</p>

<table>
  <% @forum_thread.posts.each do |post|%>
    <tr>
      <td>
        <b><%= post.user.username %></b>
      </td>
      <td>
        <%= post.content %>
      </td>
        <% if post.user == @current_user || @current_user.admin? %>
          <td>
            <%= link_to 'edit post', edit_post_path(post) %>
          </td>
        <% end %>
      </tr>
  <% end %>
</table>

<%= link_to 'Reply', new_forum_thread_post_path(@forum_thread) %> |
<%= link_to 'Edit', edit_forum_thread_path(@forum_thread) if @user == @current_user || @current_user.admin? %> 
<%= link_to 'Back', category_forum_threads_path(@forum_thread.category) %>
